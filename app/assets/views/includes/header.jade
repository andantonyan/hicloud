header(ng-controller='HeaderCtrl as header', ng-init="header.init()")
	nav.navbar.navbar-default(role="navigation", ng-control)
		.container-fluid
			.navbar-header
				button.navbar-toggle(type="button", ng-click="isCollapsed = !isCollapsed")
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href="/#/home") Hi Cloud
			.collapse.navbar-collapse(collapse="isCollapsed")
				ul.nav.navbar-nav.navbar-right
					li(ng-hide="isAuthenticated")
						a(href="#/login") Login
					li(ng-hide="isAuthenticated")
						a(href="#/register") Register
					li(ng-show="isAuthenticated")
						a(href="/#/dashboard") Dashboard
					li.dropdown(ng-show="isAuthenticated")
						a.dropdown-toggle(data-toggle="dropdown", href="#", aria-expanded="false")
							| {{user.email}}
							span.caret
						ul.dropdown-menu(role="menu")
							li
								a(href="/#", ng-click="header.logout()") Logout
