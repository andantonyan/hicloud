.main-contentf(ng-init="login.init()")
	div(ng-include="'/build/views/includes/header.html'")
	.col-lg-5.col-centered
		//- alert.alert(ng-repeat="error in errors", type="danger") {{error.err}}
		form.form-signin(name="registerForm", novalidate="")
			.control-group
				label Email
				input.form-control(type="email", placeholder="email", name="email", ng-model="user.email", required="")
				div(ng-show="registerForm.email.$dirty", ng-messages="registerForm.email.$error")
					div(ng-message="required")
					div(ng-message="email")
			.control-group
				label Password
				input.form-control(type="password", placeholder="password", name="password", ng-model="user.password", required="")
				div(ng-show="registerForm.password.$dirty", ng-messages="registerForm.password.$error")
					div(ng-message="required")
			input.btn.btn-lg.btn-primary.btn-block(type="submit", ng-click="login()", value="Login")

	div(ng-include="'/build/views/includes/footer.html'")

