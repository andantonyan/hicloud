.dashboard-content.container-fluid(ng-init="modal.init()")
	.row-fluid
		.col-md-1
		.col-md-10
			.alert.alert-warning(role="alert", ng-show="formError") {{formError}}
			form.form-signin(name="createAppForm", novalidate="")
				.control-group
					select.form-control(ng-model="app.type" , ng-options="obj.value as obj.text for obj in appTypes")
				.control-group
					br
					input.form-control(type="text", placeholder="Application Name", name="name", ng-model="app.name", required)
				.control-group
					br
					textarea.form-control(placeholder="Application Description", name="description", ng-model="app.description", required)
				.control-group
					br
					.btn-group
						input.btn.btn-sm.btn-warning(type="reset", ng-click="modal.close()", value="Cancel")
						input.btn.btn-sm.btn-success(type="submit", ng-click="modal.done(createAppForm.$valid)", value="Create Application")
		.col-md-1

